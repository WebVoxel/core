{
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "template": "node_modules/better-docs",
        "readme": "./README.md",
        "tutorials": "./tutorials"
    },
    "tags": {
        "allowUnknownTags": true
    },
    "plugins": [
        "node_modules/better-docs/typescript",
        "plugins/markdown"
    ],
    "source": {
        "includePattern": "\\.ts$",
        "include": ["./src"],
        "exclude": ["node_modules"]
    },
    "template": {
        "better-docs": {
            "name": "WebVoxel Core",
	        "hideGenerator": true,
            "navigation": [
                {
                    "label": "Github",
                    "href": "https://github.com/WebVoxel/core/"
                }
            ]
        }
    }
}